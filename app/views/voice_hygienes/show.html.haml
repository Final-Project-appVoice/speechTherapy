= render partial: 'menu/menu', locals: {active: "voice_hygiene"}

.row
  .col-md-4.col-md-offset-4
    .thumbnail
      .caption
        %h3.text-center
          %b
            = @voice_hygiene.title
        %p
          %b מספר משימה
          = @voice_hygiene.id
        %p
          %b הוראות
          .panel.panel-default.description
            .panel-body
              = @voice_hygiene.description
        %p
          %b מסמך 
          = link_to "/data/voice_hygiene/#{@voice_hygiene.path_pdf}", target: '_blank' do 
            = @voice_hygiene.path_pdf
        %p.text-center
          = link_to 'ערוך', edit_voice_hygiene_path(@voice_hygiene), class: 'btn btn-primary', role: 'button'
          \#{link_to 'חזור', voice_hygienes_path, class: 'btn btn-default', role: 'button'}        

        %p#notice.text-center{:class => ('alert alert-success' unless notice.blank?)}= notice